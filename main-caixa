package trabalhopoo1;

import javax.swing.JOptionPane;

/**
 *
 * @author gabriel
 * e luan
 */
public class TrabalhoPOO1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        CaixaRegistradora caixa = new CaixaRegistradora();
        float valorProduto;
        
        do{
            valorProduto = Float.parseFloat(JOptionPane.showInputDialog("Entre com o valor do produto.\nDigite 0 para sair"));
            caixa.somaValores(valorProduto);
        }while(valorProduto!=0);
        
        JOptionPane.showMessageDialog(null, "O valor da compra Ã© de "+caixa.mostraValorTotal());
        
    }
}

class CaixaRegistradora{       
 
    float valorTotal;        
 
    void somaValores(float valorProduto){
        valorTotal=valorTotal+valorProduto;
    }
    
    float mostraValorTotal(){
        return valorTotal;
    }
    
    
}
